{
  "name": "@frontal/colors",
  "version": "0.0.1",
  "contributors": ["Gabriel Fonseca <jg.fonseca@outlook.pt>"],
  "license": "MIT",
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/index.mjs",
      "require": "./build/index.js"
    }
  },
  "scripts": {
    "build:css": "tsx scripts/build-css-modules.mjs",
    "build": "pnpm clean && pnpm install && tsup && pnpm build:css",
    "prepublishOnly": "pnpm build",
    "postpublish": "pnpm clean",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "style:init": "npx @frontal/style-guide init",
    "style:check": "npx @frontal/style-guide lint",
    "style:fix": "npx @frontal/style-guide format",
    "changeset:init": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "keywords": ["frontal", "colors", "tailwind", "css"],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@frontal/style-guide": "github:frontalhq/style-guide",
    "@types/node": "^20.17.47",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "tslib": "^2.2.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^1.3.1"
  }
}
